
if [[ -r ~/.bash_profile && $(uname -s) == "Linux" ]]; then
    source ~/.bash_profile
fi

# Load ~/.exports, ~/.aliases, ~/.functions, ~/.fun, and ~/.extra
for file in ~/.{exports,aliases,functions,fun,extra}; do
    [ -r "$file" ] && source "$file"
done
unset file

# Add any system specifics to /etc/bashrc
if [ -r "/etc/bashrc" ]; then
    source "/etc/bashrc"
fi
